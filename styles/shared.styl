@keyframes fadeIn
  from
    opacity 0

  to
    opacity 1

@keyframes fadeOut
  from
    opacity 1

  to
    opacity 0

.main
  margin rem-calc(32) auto 0
  flexbox(flex)
  flex-flow(column)

.container
  margin 0 rem-calc(24)

.headline
  font-size rem-calc(18)
  line-height rem-calc(25)
  margin 0 0 rem-calc(40)

.animated
  animation-duration 600ms
  animation-fill-mode both

.fadeIn
  animation-name fadeIn

.fadeOut
  animation-name fadeOut

@media screen and (min-width: rem-calc(640))

  .main
    margin rem-calc(144) auto 0
    max-width 92%

  .container
    margin 0 rem-calc(0)

  .headline
    font-size rem-calc(22)
    line-height rem-calc(28)
    margin 0 0 rem-calc(80)


@media screen and (min-width: rem-calc(1600))

  .main
    max-width 1600px
